<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="library" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>team2.database_wrapper.entities.AccountEntity</class>
        <class>team2.database_wrapper.entities.AccountRoleEntity</class>
        <class>team2.database_wrapper.entities.BookMetaEntity</class>
        <class>team2.database_wrapper.entities.ConfigurationEntity</class>
        <class>team2.database_wrapper.entities.CreatorPersonEntity</class>
        <class>team2.database_wrapper.entities.CreatorTypeEntity</class>
        <class>team2.database_wrapper.entities.CustomerEntity</class>
        <class>team2.database_wrapper.entities.DvdMetaEntity</class>
        <class>team2.database_wrapper.entities.GenreEntity</class>
        <class>team2.database_wrapper.entities.LoanEntity</class>
        <class>team2.database_wrapper.entities.LoanConditionEntity</class>
        <class>team2.database_wrapper.entities.MediaEntity</class>
        <class>team2.database_wrapper.entities.MediaMemberEntity</class>
        <class>team2.database_wrapper.entities.MediaTypeEntity</class>
        <class>team2.database_wrapper.entities.MediaCreatorPersonEntity</class>
        <class>team2.database_wrapper.entities.PublisherEntity</class>
        <class>team2.database_wrapper.entities.PublisherTypeEntity</class>
        <class>team2.database_wrapper.entities.ReminderEntity</class>
        <class>team2.database_wrapper.entities.ReservationEntity</class>
        <class>team2.database_wrapper.entities.StaffEntity</class>

        <properties>
            <!--<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />-->
            <property name="javax.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver" />
            <!-- <property name="hibernate.hbm2ddl.auto" value="validate" /> -->
            <!--<property name="dialect" value="org.hibernate.dialect.MySQL5Dialect" />-->

            <!-- requires the fhv vpn connection or a fhv wlan, lan connection -->
            <property name="hibernate.connection.username" value="root" />
            <property name="hibernate.connection.password" value="WS2017+fhv" />
            <property name="hibernate.connection.url" value="jdbc:mariadb://10.0.51.92:3306/Library" />
            <!-- force to use UTC instead of CEST
            for issue: The server time zone value 'CEST' is unrecognized or represents more than one time zone -->
            <property name="hibernate.jdbc.time_zone" value="UTC"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            <property name="hibernate.globally_quoted_identifiers" value="true"/>

            <property name="hibernate.connection.characterEncoding" value="utf8"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
            <property name="hibernate.connection.charSet" value="UTF-8"/>

            <property name="connection_pool_size" value="5" />

            <!-- only for testing -->
            <property name="hibernate.show_sql" value="true" />
            <property name="openjpa.Log" value="DefaultLevel=WARN, Runtime=INFO, Tool=INFO, SQL=TRACE"/>
            <property name="openjpa.ConnectionFactoryProperties" value="PrintParameters=true" />
            <property name="hibernate.id.new_generator_mappings" value="true" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
