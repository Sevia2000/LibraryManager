<project>
    <shortName>Server</shortName>
    <fullName>Server for LibraryManager</fullName>
    <version>1.0</version>
    <installerFilename></installerFilename>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>Server for LibraryManager</comment>
                    <exec>${installdir}/tomcat/bin/catalina.sh start</exec>
                    <icon>${installdir}/tomcat/icon.ico</icon>
                    <name>Start LibraryManager Server</name>
                    <noPinToStart>0</noPinToStart>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\tomcat\bin\catalina.bat</windowsExec>
                    <windowsExecArgs>start</windowsExecArgs>
                    <windowsIcon>${installdir}/tomcat/icon.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
                <shortcut>
                    <comment>Stop LibraryManager Server</comment>
                    <exec>${installdir}/tomcat/bin/catalina.sh stop</exec>
                    <icon>${installdir}/tomcat/icon.ico</icon>
                    <name>Stop LibraryManager Server</name>
                    <noPinToStart>0</noPinToStart>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}\tomcat\bin\catalina.bat</windowsExec>
                    <windowsExecArgs>stop</windowsExecArgs>
                    <windowsIcon>${installdir}/tomcat/icon.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>tomcat</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Start Tomcat</comment>
                    <name>Start Tomcat</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/tomcat/bin/catalina.bat</windowsExec>
                    <windowsExecArgs>start</windowsExecArgs>
                    <windowsIcon>${installdir}/tomcat/icon.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Stop Tomcat</comment>
                    <name>Stop Tomcat</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/tomcat/bin/catalina.bat</windowsExec>
                    <windowsExecArgs>stop</windowsExecArgs>
                    <windowsIcon>${installdir}/tomcat/icon.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
                <startMenuLinkShortcut>
                    <comment>Start LibraryManager in Webbrowser</comment>
                    <name>Start LibraryManager in Webbrowser</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <url>http://localhost:${tomcat_http_port}</url>
                    <windowsIcon>${installdir}/tomcat/icon.ico</windowsIcon>
                </startMenuLinkShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <preInstallationActionList>
        <autodetectJava>
            <customErrorMessage>Java 1.8 is required</customErrorMessage>
            <promptUser>1</promptUser>
            <validVersionList>
                <validVersion>
                    <bitness></bitness>
                    <maxVersion></maxVersion>
                    <minVersion>1.8</minVersion>
                    <requireJDK>0</requireJDK>
                    <vendor></vendor>
                </validVersion>
            </validVersionList>
        </autodetectJava>
    </preInstallationActionList>
    <postInstallationActionList>
        <substitute>
            <files>${installdir}/tomcat/conf/server.xml</files>
            <type>regexp</type>
            <substitutionList>
                <substitution>
                    <pattern>port="8080"</pattern>
                    <value>port="${tomcat_http_port}"</value>
                </substitution>
                <substitution>
                    <pattern>port="8005"</pattern>
                    <value>port="${tomcat_shutdown_port}"</value>
                </substitution>
            </substitutionList>
        </substitute>
        <changePermissions>
            <files>${installdir}/tomcat/bin/*</files>
            <permissions>744</permissions>
        </changePermissions>
        <setInstallerVariableFromRegEx>
            <name>java_home</name>
            <pattern>bin.java.*$</pattern>
            <substitution></substitution>
            <text>${java_executable}</text>
        </setInstallerVariableFromRegEx>
        <changePermissions>
            <files>${installdir}/*.sh</files>
            <permissions>744</permissions>
        </changePermissions>
        <createSymLink>
            <linkName>~/Desktop/Start LibraryManager Server</linkName>
            <target>${installdir}/tomcat/bin/startup.sh</target>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </createSymLink>
        <createSymLink>
            <linkName>~/Desktop/Stop LibraryManager Server</linkName>
            <target>${installdir}/tomcat/bin/shutdown.sh</target>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </createSymLink>
    </postInstallationActionList>
    <preUninstallationActionList>
        <runProgram>
            <program>${installdir}/tomcat/bin/catalina.sh</program>
            <programArguments>stop</programArguments>
            <workingDirectory>${installdir}</workingDirectory>
            <ruleList>
                <platformTest>
                    <type>linux</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <runProgram>
            <customErrorMessage>Could not launch the app due to MacOSX's security policy. Start the app manually.</customErrorMessage>
            <program>${installdir}/tomcat/bin/shutdown.sh</program>
            <programArguments></programArguments>
            <workingDirectory>${installdir}</workingDirectory>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <runProgram>
            <program>${installadir}/tomcat/bin/catalina.bat</program>
            <programArguments>stop</programArguments>
            <workingDirectory>${installadir}</workingDirectory>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
            </ruleList>
        </runProgram>
        <waitForPort>
            <port>${tomcat_http_port}</port>
            <state>free</state>
            <timeout>3000</timeout>
        </waitForPort>
    </preUninstallationActionList>
    <createOsxBundleDmg>1</createOsxBundleDmg>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>Team F</vendor>
    <finalPageActionList>
        <actionGroup>
            <progressText>Start Server</progressText>
            <actionList>
                <runProgram>
                    <program>${installdir}/tomcat/bin/catalina.sh</program>
                    <programArguments>start</programArguments>
                    <workingDirectory>${installdir}</workingDirectory>
                    <ruleList>
                        <platformTest>
                            <type>linux</type>
                        </platformTest>
                    </ruleList>
                </runProgram>
                <runProgram>
                    <customErrorMessage>Could not launch the app due to MacOSX's security policy. Start the app manually.</customErrorMessage>
                    <program>${installdir}/tomcat/bin/startup.sh</program>
                    <programArguments></programArguments>
                    <workingDirectory>${installdir}</workingDirectory>
                    <ruleList>
                        <platformTest>
                            <type>osx</type>
                        </platformTest>
                    </ruleList>
                </runProgram>
                <runProgram>
                    <program>${installdir}\tomcat\bin\catalina.bat</program>
                    <programArguments>start</programArguments>
                    <workingDirectory>${installdir}</workingDirectory>
                    <ruleList>
                        <platformTest>
                            <type>windows</type>
                        </platformTest>
                    </ruleList>
                </runProgram>
                <waitForPort>
                    <port>${tomcat_http_port}</port>
                    <state>in_use</state>
                    <timeout>5000</timeout>
                </waitForPort>
                <launchBrowser>
                    <url>http://localhost:${tomcat_http_port}</url>
                </launchBrowser>
            </actionList>
        </actionGroup>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}-${product_version}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
        <parameterGroup>
            <name>tomcat_configuration</name>
            <title>Tomcat Configuration</title>
            <explanation></explanation>
            <value></value>
            <default></default>
            <ask>0</ask>
            <parameterList>
                <stringParameter>
                    <name>tomcat_http_port</name>
                    <description>HTTP Port</description>
                    <explanation></explanation>
                    <value></value>
                    <default>8080</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <ask>0</ask>
                    <width>30</width>
                    <validationActionList>
                        <throwError>
                            <text>${tomcat_http_port} is busy, please select a different port.</text>
                            <ruleList>
                                <portTest>
                                    <condition>cannot_bind</condition>
                                    <port>${tomcat_http_port}</port>
                                </portTest>
                            </ruleList>
                        </throwError>
                    </validationActionList>
                </stringParameter>
                <stringParameter>
                    <name>tomcat_shutdown_port</name>
                    <description>Shutdown Port</description>
                    <explanation></explanation>
                    <value></value>
                    <default>8005</default>
                    <allowEmptyValue>0</allowEmptyValue>
                    <ask>0</ask>
                    <width>30</width>
                    <validationActionList>
                        <throwError>
                            <text>${tomcat_shutdown_port} is busy, please select a different port.</text>
                            <ruleList>
                                <portTest>
                                    <condition>cannot_bind</condition>
                                    <port>${tomcat_shutdown_port}</port>
                                </portTest>
                            </ruleList>
                        </throwError>
                    </validationActionList>
                </stringParameter>
            </parameterList>
        </parameterGroup>
    </parameterList>
</project>

